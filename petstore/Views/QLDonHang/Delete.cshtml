@model petstore.Models.DonHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 padding-8">
    <h3>Bạn có chắc chắn muốn xóa đơn hàng này?</h3>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Hình thức thanh toán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.thanhtoan)
            </dd>

            <dt>
                Trạng thái
            </dt>

            <dd>
                @Html.DisplayFor(model => model.giaohang)
            </dd>

            <dt>
                Ngày đặt
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ngaydat)
            </dd>

            <dt>
                Ngày giao
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ngaygiao)
            </dd>

            <dt>
                Mã khách hàng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.makh)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa đơn hàng" class="btn btn-danger" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>

</div>

