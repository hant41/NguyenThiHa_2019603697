@model petstore.Models.DichVu

@{
    ViewBag.Title = "XoaLichHen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="body">
    <div class="col-lg-12 pl-3">
        <div class="menu_option-head2">
            <h3>Bạn có chắc chắn muốn xóa lịch hẹn này?</h3>
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ tên
            </dt>

            <dd>
                @Html.DisplayFor(model => model.hoten)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>

            <dt>
                Số điện thoại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.sdt)
            </dd>

            <dt>
                Địa chỉ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.diachi)
            </dd>

            <dt>
                Trạng thái
            </dt>

            <dd>
                @if (Model.trangthai == "đang chờ")
                {
                    <div style="color: #007bff;">@Model.trangthai</div>
                }
                else if (Model.trangthai == "chờ khách đến")
                {
                    <div style="color: green;">@Model.trangthai</div>
                }
            </dd>

            <dt>
                Tên dịch vụ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tendichvu)
            </dd>

            <dt>
                Ngày đặt
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ngaydat)
            </dd>

            <dt>
                Mã khách hàng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.makh)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa lịch hẹn" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "LichHen")
            </div>
        }
    </div>

</div>


