@model petstore.Models.DichVu

@{
    ViewBag.Title = "SuaLichHen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.iddichvu)
        <br />
        <div class="form-group">
            <h3>&nbsp;&nbsp;Cập nhật trạng thái lịch hẹn</h3>
            <div class="col-md-10">
                <select id="suatrangthai" name="suatrangthai" class="form-control">
                    <option value="đang chờ">đang chờ</option>

                    <option value="đang chờ">1 - đang chờ</option>
                    <option value="chờ khách đến">2 - chờ khách đến</option>
                </select>
                @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    &nbsp;&nbsp;
    @Html.ActionLink("Quay lại", "LichHen")
</div>
